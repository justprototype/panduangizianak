<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CekStatusGiziActivity"
    android:background="@drawable/bakkkk">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded11"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CEK STATUS GIZI ANAK"
            android:gravity="center_horizontal"
            android:textColor="#FFFF"
            android:textSize="20dp"/>

        <TextView
            android:layout_marginTop="50dp"
            android:text="Jenis Kelamin"
            android:id="@+id/test"
            android:textColor="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner">
        </Spinner>

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#FFFF"
            android:text="Berat Badan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="berat badan"
            android:id="@+id/idberat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#FFFF"
            android:text="Tinggi Badan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="tinggi badan"
            android:id="@+id/idtinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#FFFF"
            android:text="Usia" />

        <EditText
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="usia(bulan)"
            android:id="@+id/idusia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#4169E1"
            android:background="@drawable/rounded3"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="HITUNG"
            android:id="@+id/hitung"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info selengkapnya "
            android:textColor="#FFFF"
            android:gravity="center_horizontal"/>
    </LinearLayout>



</LinearLayout>